<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.h2n.nihongorenshuu">

    <application
        android:name=".database.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".StartupActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity"
            android:launchMode="singleTop">
        </activity>
        <activity android:name=".app.transquiz.TransQuiz">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.h2n.nihongorenshuu.app.transquiz.TransQuizHome"/>
        </activity>
        <activity android:name=".app.transquiz.TransQuizHome"
            android:launchMode="singleTop">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.h2n.nihongorenshuu.MainActivity" />
        </activity>
        <activity android:name=".app.grammar.GrammarListReview"
            android:launchMode="singleTop">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.h2n.nihongorenshuu.MainActivity" />
        </activity>
        <activity android:name=".app.grammar.GrammarDetail">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.h2n.nihongorenshuu.app.grammar.GrammarListReview" />
        </activity>
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
    </application>

</manifest>